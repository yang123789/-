/* pages/giving/giving.wxss */
.giving{
    width:590rpx;
    margin:0 auto;
    padding-top:30rpx;
    padding-bottom: 30rpx;
}
.giving .title{
    font-size:30rpx;
    color:#303030;
    border-bottom: 1rpx solid #e8e8e8;
    padding-bottom: 20rpx;
}
.number{
    width:100%;
    position: relative;
    border-bottom: 1rpx solid #e8e8e8;
    height:90rpx;
    line-height: 90rpx;
}
.number .left{
    font-size: 24rpx;
    color:#303030;
}
.number .right{
    position: absolute;
    right:0;
    top:0;
}
.number .num-handle{
    margin-top:16rpx;
}
.number .num-handle view{
    width:52rpx;
    height:52rpx;
    line-height: 48rpx;
    text-align: center;
    background: #dde1de;
    border-radius:10rpx;
    float: left;
    font-size:44rpx;
}
.number .num-handle input{
    width:48rpx;
    height:48rpx;
    border:1rpx solid #000000;
    float: left;
    border-radius:10rpx;
    margin-left:10rpx;
    margin-right:10rpx;
    min-height:48rpx;
    font-size:24rpx;
    color:#303030;
    text-align: center;
}
.number .num{
    font-size:24rpx;
    color:#303030;
    font-weight: bold;
}
.pay-btn{
    width:100%;
    height:66rpx;
    color: #fff;
    background:#396d5f;
    padding:0;
    line-height:66rpx;
    font-size:24rpx;
    display: block;
    margin-top:40rpx;
}
.mask{
    width:100%;
    height:100%;
    position:fixed;
    background:rgba(0, 0, 0, 0.61);
    top:0;
    left:0;
}
.mask .send{
    position: absolute;
    bottom: 20rpx;
    left:0;
    background: white;
    width:710rpx;
    margin-left:20rpx;
    text-align: center;
    padding:20rpx 0rpx 30rpx 0rpx;
    border-radius:20rpx;
}
.mask .send .img{
    width:88rpx;
    height:80rpx;
    margin-bottom: 20rpx;
}
.mask .send .words{
    font-size: 30rpx;
    color:#396d5f;
    margin-bottom: 40rpx;
}
.mask .send .desc{
    font-size: 26rpx;
    color:#999999;
    line-height: 42rpx;
    margin-bottom:40rpx;
}
.next-btn{
    width:584rpx;
    height:66rpx;
    line-height:66rpx;
    display: block;
    margin:0 auto;
    background:#396d5f;
    font-size:30rpx;
    color:#fff;
}