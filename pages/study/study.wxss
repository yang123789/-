/* pages/study/study.wxss */
.container{
    padding-bottom: 156rpx;
}
.footer{width:100%;height:106rpx;border-top:1rpx solid #eee;position:fixed;bottom:0;background:white;}
.footer-item{
    width:33.33%;
    float: left;
    height:100%;
    text-align: center;
    display: block;
}
.footer-item image{
    width:60rpx;
    height:60rpx;
}
.footer-item view{
    font-size:22rpx;
    color:#636363;
}
.footer-item.active view{
    color:#396d5f;
}
.container .matter {
    width:100%;
}
.container .matter .head{
    width:100%;
    height:80rpx;
    line-height:80rpx;
    position:relative;
    border-bottom:1rpx solid #eee;
}
.container .matter .head .title{
    font-size:32rpx;
    color:#396d5f;
    border-bottom:6rpx solid #396d5f;
    padding-bottom: 16rpx;
    margin-left:26rpx;
}
.container .matter .head .integral{
    display: inline-block;
    position:absolute;
    right:0;
    top:10rpx;
    background:#ebebeb;
    height:60rpx;
    line-height: 60rpx;
    padding-left:7rpx;
    padding-right:13rpx;
    border-radius: 30rpx 0 0 30rpx;
}
.container .matter .head .integral .uimg{
    width:48rpx;
    height:48rpx;
    border-radius:50%;
    display: block;
    float: left;
    margin-top:6rpx;
    margin-right:6rpx;
}
.container .matter .head .integral .unumber{
    font-size:24rpx;
    color:#4b4b4b;
    display: block;
    float: left;
    margin-right:6rpx;
}
.container .matter .head .integral .goimg{
    width:10rpx;
    height:17rpx;
   display: block;
    float: left;
    margin-top:20rpx;
}
.container .matter .content{
    padding-top:30rpx;
}
.little,.all{
    padding:0rpx 20rpx;
    margin-bottom:40rpx;
}
.all-item{
    border-radius:30rpx;
    overflow: hidden;
    box-shadow: 0rpx 0rpx 20rpx #000;
    position: relative;
}
.all-item .study-state,.l-img .study-state{
    position:absolute;
    top:30rpx;
    right:10px;
    background:white;
    border-radius:30rpx;
    font-size:20rpx;
    color:#396d5f;
    padding:6rpx 10rpx;
}
.all-item image{
    width:100%;
    height:497rpx;
    display: block;
}
.little-item{
    border-radius:30rpx;
    overflow: hidden;
    box-shadow: 0rpx 0rpx 20rpx #000;
    background:#f5f5f5;
    position:relative;
}

.l-img{
    width:100%;
    height:497rpx;
}
.l-img image{
    width:100%;
    height:100%;
}
.little .bottom-box{
    position:absolute;
    bottom:0;
    background:#eee;
    width:100%;
    padding-top:30rpx;
    padding-bottom:30rpx;
}
.little .bottom{
    padding:0 14rpx;
    
}
.little .bottom .progress{
    width:100%;
    height:6rpx;
    border-radius:30rpx;
    background:#a3a3a3;
}
.little .bottom .progress .progress-bar{
    height:100%;
    border-radius:30rpx;
    background:#396d5f;
    position:relative;
}
.little .bottom .progress .progress-bar:after{
    content:'';
    position:absolute;
    width:10rpx;
    height:10rpx;
    border-radius:50%;
    background:#396d5f;
    right:-2rpx;
    top:-50%;
}
.pro-text{
    width:100%;
    text-align: right;
    font-size:20rpx;
    color:#396d5f;
    margin-top:8rpx;
}
.course{
    width:100%;
    overflow: hidden;
    position: relative;
}
.jxbtn{
   width:140rpx;
    height:50rpx;
    line-height:50rpx;
    background:#396d5f;
    padding:0;
    color:#ffffff;
    font-size:28rpx;
    position:absolute;
    right:0;
    top:10px;

}
.course .left{
    width:68rpx;
    height:68rpx;
    margin-top:16rpx;
    float: left;
    border-radius:50%;
}
.course .right{
    width:590rpx;
    float:right;
}
.course .right .name{
    font-size:24rpx;
    color:#494949;
    margin-bottom:10rpx;
}
.course .right .title{
    font-size:22rpx;
    color:#396d5f;
    margin-bottom:10rpx;
}
.course .right .matter{
    font-size:20rpx;
    color:#838484;
}
.all .data,.little .data{
    font-size:24rpx;
    color:#396d5f;
    line-height:80rpx;
    padding-left:34rpx;
    position:relative;
}
.all .data:after,.little .data:after{
    content:"";
    position:absolute;
    top:50%;
    left:10rpx;
    width:14rpx;
    height:14rpx;
    border-radius:50%;
    background:#396d5f;
}