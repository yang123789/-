/* pages/shuji/shuji.wxss */
.past-box{
    width:100%;
    padding-bottom:70rpx;
}
.container{
    display: none;
}
.blocks{
    display: block;
}
.container1{
    width:100%;
}
.container2{
    width:100%;
    padding-top:40%;
    font-size:36rpx;
    color:#333;
    text-align: center;
}
.past{
    padding:20rpx;
}
.past .title{
    font-size:24rpx;
    color:#717171;
    text-align: center;
    margin-bottom:20rpx;
}
.past .past-item{
    width:100%;
    overflow: hidden;
    margin-bottom:20rpx;
}
.past .past-item:last-child{
    margin-bottom:0rpx;
}
.past .past-item .left{
    width:160rpx;
    height:110rpx;
    display: block;
    float: left;
}
.past .past-item .right{
    width:520rpx;
    float: right;
    font-size:24rpx;
    color:#383838;
    margin-top:14rpx;
    line-height: 40rpx;
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}
.secretary{
    width:100%;
}
.secretary .title{
    font-size:36rpx;
    color:#323232;
    padding:25rpx 40rpx;
}
.secretary .lists .s-item{
    width:650rpx;
padding:30rpx 20rpx 30rpx 20rpx;
margin:0 auto;
border:2rpx dashed #858585;
margin-bottom:70rpx;

}
.secretary .lists .s-item .img{
   width:650rpx;
height:800rpx;
display:block;
margin-bottom:30rpx;

}
.secretary .lists .s-item .name{
    text-align: center;
}
.secretary .lists .s-item .name image{
    width:26rpx;
    height:26rpx;
    vertical-align: middle;
}
.secretary .lists .s-item .name text{
    font-size:24rpx;
    color:#838383;
    vertical-align: middle;
    margin-left:10rpx;
}
.no-past{
    color:#666;
    font-size:28rpx;
    padding:40rpx 0;
    text-align: center;
}
.release{
    position:fixed;
    background:white;
    border-top:1rpx solid #eee;
    bottom:0;
    left:0;
   width:100%;
   padding:15rpx 0;
   z-index:3;
   }
.release input{
    margin-left:15rpx;
    width:510rpx;
    height:70rpx;
    float: left;
    padding-left:10rpx;
    padding-right:10rpx;
    border:1rpx solid #eee;
    border-radius:10rpx;
}
.release .release-btn{
    margin-right:15rpx;
    float: right;
    width:175rpx;
    height:70rpx;
    text-align: center;
    line-height: 70rpx;
    background:#396d5f;
    font-size:30rpx;
    color: #fff;
    border-radius:10rpx;
}