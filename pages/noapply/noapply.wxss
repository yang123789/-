/* pages/noapply/noapply.wxss */
.container{
    padding-bottom:120rpx;
}
.n-image{
    width:100%;
    position:relative;
    height:500rpx;
}
.n-image image{
    width:100%;
    height:100%;
}
.n-image .time{
    width:100%;
    height:70rpx;
    line-height: 70rpx;
    font-size:24rpx;
    text-align: center;
    position:absolute;
    bottom:0;
    background:rgba(255, 51, 0, 0.45);
    color:white;
}
.ntext{
    font-size:28rpx;
    color:#676262;
    padding:0 80rpx;
    line-height: 46rpx;
}
.container .matter{
    padding:20rpx 0;
}
.container .matter .title{
    height:60rpx;
    line-height: 60rpx;
    margin-bottom:20rpx;
}
.container .matter .title image{
    width:38rpx;
    height:37rpx;
    vertical-align: middle;
    margin-right:10rpx;
    margin-left:40rpx;
}
.container .matter .title text{
    font-size:30rpx;
    color:#396d5f;
    
}
.foot{
    width:100%;
    height:120rpx;
    position:fixed;
    bottom:0;left:0;
    background:#cccccc;
}
.foot .price{
    font-size:48rpx;
   height:120rpx;
   line-height:120rpx;
    color:#396d5f;
    margin-left:20rpx;
}
.foot .price text{
  font-size:30rpx;
  color:#396d5f;
  margin-left:10rpx;
  vertical-align: middle;
}
.foot .preferential{
    display: inline-block;
}
.foot .preferential .preferential1{
    padding-top:14rpx;
    margin-bottom:6rpx;
    }
.foot .preferential .preferential1 text:nth-child(1){
    background:#396d5f;
    font-size:24rpx;
    color:#ffffff;
    padding:4rpx;
    border-radius:10rpx;
}
.foot .preferential .preferential1 text:nth-child(2){
    font-size:24rpx;
    color:#757575;
    text-decoration: line-through;
    margin-left:20rpx;
}
.foot .preferential .preferential2{
    font-size:34rpx;
    color:#396d5f;
}
.foot .preferential .preferential2 text{
    color:#f02525;
}
.pay-btn{
    position:absolute;
    width:230rpx;
    height:96rpx;
    background:#396d5f;
    font-size:36rpx;
    color:#ffffff;
    top:12rpx;
    right:36rpx;
}
.container .matter{
    width:100%;
}
.o-info{
    width:100%;
    position:relative;
}
.o-info .img{
    width:100%;
    height:500rpx;
}
.o-info  .top{
    position:absolute;
    color:#000000;
    left:40rpx;
    top:75rpx;
}
.o-info  .top .title{
    font-size: 48rpx;
    margin-bottom: 46rpx;
}
.o-info  .top .name image{
    width:30rpx;
    height:35rpx;
    margin-right:15rpx;
    vertical-align: middle;
}
.o-info  .top .name text{
    font-size: 28rpx;
    vertical-align: middle;
}
.o-info  .top .time image{
    width:35rpx;
    height:35rpx;
    margin-right:10rpx;
    vertical-align: middle;
}
.o-info  .top .time text{
    font-size: 28rpx;
    vertical-align: middle;
}