/* pages/fullAnswer/fullAnswer.wxss */
page{
    background:#f5f5f5;
    height:100%;
}
.container{
    height:auto;
}
.none{
    width:100%;
    height:120rpx;
}

.full-img{
    width:100%;
    height:500rpx;
}
.full-img image{
    width:100%;
    height:100%;
}
.container .matter{
    width:100%;
    padding-top:20rpx;
    padding-bottom:20rpx;
}
.pin{
    position:fixed;
    width:100%;
    background:white;
    height:120rpx;
    bottom:0;
    z-index:9999;
}
.pin image{
    width:80rpx;
    height:80rpx;
    display: block;
    margin:0 auto;
    margin-top:20rpx;
}
.fa-lists{
    width:100%;
    padding-top:10rpx;
}
.fa-item{
    padding:12rpx;
}
.block{
    display: block;
}
.fa-lists .left .timg{
    width:80rpx;
    height:80rpx;
    border-radius:50%;
    vertical-align: text-bottom;
}
.fa-lists .left .handle{
    display: inline-block;
    margin-left:30rpx;
}
.fa-lists .left .handle image{
    width:40rpx;
    height:40rpx;
    margin-right:20rpx;
}
.fa-lists .right .handle{
    display: inline-block;
}
.fa-lists .right .handle image{
    width:40rpx;
    height:40rpx;
    margin-right:20rpx;
}
.fa-lists .right{
    text-align: right;
}
.fa-lists .right .timg{
    width:80rpx;
    height:80rpx;
    border-radius:50%;
    vertical-align: text-bottom;
}
.fa-lists .left .dialogue{
    display: inline-block;
    vertical-align: text-bottom;
    width:350rpx;
    background:white;
    font-size:26rpx;
    color:#333;
    padding:10rpx 20rpx;
    margin-left:20rpx;
    border-radius:20rpx 20rpx 20rpx 0rpx;
}
.fa-lists .right .dialogue{
    display: inline-block;
    vertical-align: text-bottom;
    width:350rpx;
    background:white;
    font-size:26rpx;
    padding:10rpx 20rpx;
    margin-right:20rpx;
    border-radius:20rpx 20rpx 0rpx 20rpx;
    background:#feb743;
    color:white;
}
.fa-lists .right .dialogue{
    text-align:left;
    background:#396d5f;
}
.note-mask{
    width:100%;
    height:100%;
    background:rgba(43, 43, 43, 0.6);
    position:fixed;
    top:0;
    left:0;
}
.note-mask .note-box{
    position:absolute;
    top:40%;
    left:10%;
    margin-top:-200rpx;
    background:white;
    border-radius:20rpx;
    width:80%;
    padding-bottom:30rpx;
}
.note-mask .note-box image{
    position:absolute;
    width:50rpx;
    height:50rpx;
    top:-10rpx;
    right:-10rpx;
}
.note-mask .note-box textarea{
    width:80%;
    margin-left:5%;
    margin-top:50rpx;
    height:170rpx;
    border:1rpx solid #eee;
    padding:5%;
    font-size:28rpx;
}
.note-mask .note-box button{
    width:150rpx;
    height:60rpx;
    line-height:60rpx;
    background:#396d5f;
    border-radius:10rpx;
    text-align: center;
    color:white;
    font-size:32rpx;
    padding:0;
    margin-top:20rpx;
}
.maskshow{
    display: none;
}