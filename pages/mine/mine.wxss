/* pages/mine/mine.wxss */
.container{
    padding-bottom: 156rpx;
}
.footer{width:100%;height:106rpx;border-top:1rpx solid #eee;position:fixed;bottom:0;background:white;}
.footer-item{
    width:33.33%;
    float: left;
    height:100%;
    text-align: center;
    display: block;
}
.footer-item image{
    width:60rpx;
    height:60rpx;
}
.footer-item view{
    font-size:22rpx;
    color:#636363;
}
.footer-item.active view{
    color:#396d5f;
}
.mine{
    width:100%;
    padding-top:20rpx;
}
.mine .matter{
    width:710rpx;
    height:350rpx;
    background:white;
    margin:0 auto;
    box-shadow: 0rpx 0rpx 30rpx #b1abab;
}
.mine .matter .top{
    position:relative;
    border-bottom: 1rpx solid #eee;
   height:220rpx;
    float: left;
    width:100%;
}
.mine .matter .top .name{
    font-size:48rpx;
    color:#2d2d2d;
    margin-left:55rpx;
    margin-bottom: 10rpx;
    margin-top:60rpx;
}
.mine .matter .top .num{
    font-size:24rpx;
    color:#898989;
    margin-left:55rpx;
}
.mine .matter .top .userimg{
    width:132rpx;
    height:132rpx;
    position:absolute;
    top:50rpx;
    right:43rpx;
}
.mine .matter .top .userimg image{
    width:100%;
    height:100%;
    border-radius:50%;
}
.mine .matter .bottom{
    width:100%;
    clear: both;
    overflow: hidden;
}
.mine .matter .bottom .bottom-item{
    width:50%;
    float: left;
    text-align: center;
    padding-top:16rpx;
}
.mine .matter .bottom .bottom-item view{
    font-size:24rpx;
    color:#898989;
}
.mine .matter .bottom .bottom-item view text{
    font-size:48rpx;
}