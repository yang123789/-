/* pages/ongoing/ongoing.wxss */
page{
    background:#f5f5f5;
}
.o-info{
    width:100%;
    position:relative;
}
.o-info .img{
    width:100%;
    height:500rpx;
}
.o-info  .top{
    position:absolute;
    color:#000;
    left:40rpx;
    top:75rpx;
}
.o-info  .top .title{
    font-size: 48rpx;
    margin-bottom: 46rpx;
}
.o-info  .top .name image{
    width:30rpx;
    height:35rpx;
    margin-right:15rpx;
    vertical-align: middle;
}
.o-info  .top .name text{
    font-size: 28rpx;
    vertical-align: middle;
}
.o-info  .top .time image{
    width:35rpx;
    height:35rpx;
    margin-right:10rpx;
    vertical-align: middle;
}
.o-info  .top .time text{
    font-size: 28rpx;
    vertical-align: middle;
}
.container .matter{
    width:100%;
    padding-top:20rpx;
    padding-bottom:20rpx;
}
.container .matter .title{
    height:60rpx;
    line-height: 60rpx;
    margin-bottom:20rpx;
    position: relative;
}
.container .matter .title image{
    width:38rpx;
    height:37rpx;
    vertical-align: middle;
    margin-right:10rpx;
    margin-left:40rpx;
}
.container .matter .title text{
    font-size:30rpx;
    color:#396d5f;
    
}
.container .matter .lists{
    padding:0 50rpx;
}
.container .matter .lists .full-item{
    font-size:28rpx;
    color:#676262;
    margin-bottom:20rpx;
    position: relative;
    padding-left:30rpx;
}

.class-time{
    font-size:20rpx;
    margin-left:110rpx;
    margin-top:10rpx;
}
.container .matter .lists .active{
    color:#396d5f;
}

.container .matter .lists .full-item:after{
    position:absolute;
    content:"";
    width:10rpx;
    height:10rpx;
    background:#396d5f;
    border-radius:59%;
    left:0;
    top:10rpx;
}
.all-nper{
    font-size:28rpx;
    color:#396d5f;
    position:absolute;
    top:0;
    right:20rpx;
}