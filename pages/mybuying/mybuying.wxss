/* pages/mybuying/mybuying.wxss */
page{
    background:#f5f5f5;
}
.container{
    padding-top:80rpx;
}
.buynav{
    width:100%;
    position: fixed;
    top:0;
    left:0;
    z-index:3;
}
.buy-nav{
    padding-left:20rpx;
    padding-right:20rpx;
    background:white;
    overflow: hidden;
    
}
.buy-nav view{
    width:50%;
    float: left;
    text-align: center;
    font-size:28rpx;
    color:#636363;
    height:80rpx;
    line-height: 80rpx;
}
.buy-nav view.active{
    color:#396d5f;
    border-bottom:2rpx solid #396d5f;
}
.hide{
    display: none;
}
.buy-content{
    width:100%;
}
.buy-content .little{
    padding:30rpx 20rpx;
}
.buy-content .all{
    padding:30rpx 20rpx;
}
.all-item{
    border-radius:30rpx;
    overflow: hidden;
    box-shadow: 0rpx 0rpx 20rpx #000;
    margin-bottom:30rpx;
    position:relative;
}
.all-item image{
    width:100%;
    height:497rpx;
    display: block;
}
.little-item{
    border-radius:30rpx;
    overflow: hidden;
    box-shadow: 0rpx 0rpx 20rpx #000;
    background:#f5f5f5;
    padding-bottom:36rpx;
    margin-bottom:30rpx;
}
.l-img {position:relative;}
.l-img image{
    width:100%;
    height:300rpx;
}
.little .bottom{
    padding:0 14rpx;
    margin-top:20rpx;
}
.little .bottom .progress{
    width:100%;
    height:6rpx;
    border-radius:30rpx;
    background:#a3a3a3;
}
.little .bottom .progress .progress-bar{
    height:100%;
    border-radius:30rpx;
    background:#396d5f;
    position:relative;
}
.little .bottom .progress .progress-bar:after{
    content:'';
    position:absolute;
    width:10rpx;
    height:10rpx;
    border-radius:50%;
    background:#396d5f;
    right:-2rpx;
    top:-50%;
}
.pro-text{
    width:100%;
    text-align: right;
    font-size:20rpx;
    color:#396d5f;
    margin-top:8rpx;
}
.course{
    width:100%;
    overflow: hidden;
}
.course .left{
    width:68rpx;
    height:68rpx;
    margin-top:16rpx;
    float: left;
    border-radius:50%;
}
.course .right{
    width:590rpx;
    float:right;
}
.course .right .name{
    font-size:24rpx;
    color:#494949;
    margin-bottom:10rpx;
}
.course .right .title{
    font-size:22rpx;
    color:#396d5f;
    margin-bottom:10rpx;
}
.course .right .matter{
    font-size:20rpx;
    color:#838484;
}
.all-item .study-state,.l-img .study-state{
    position:absolute;
    top:30rpx;
    right:10px;
    background:white;
    border-radius:30rpx;
    font-size:20rpx;
    color:#396d5f;
    padding:6rpx 10rpx;
}